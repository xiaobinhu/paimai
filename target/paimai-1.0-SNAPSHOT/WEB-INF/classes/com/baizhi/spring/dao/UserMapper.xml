<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	
<mapper namespace="com.baizhi.spring.dao.UserDao">
    <select id="login" resultType="User">
        select * from auction_user where user_name=#{user_name} and user_password=#{user_password}
    </select>
    
    <insert id="regist">
        insert into auction_user values(hanab.nextval,#{user_name},#{user_password},#{user_card_no},#{user_tel},#{user_address},#{user_post_number},0,#{user_name},#{user_password})
    </insert>
    

</mapper>